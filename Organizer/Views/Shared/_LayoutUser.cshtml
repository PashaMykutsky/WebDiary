@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Diary</title>
    <link href="~/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <script src="~/js/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <label class="navbar-brand">@User.Claims.Last().Value</label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="home" asp-controller="user">@Localizer["Menu_name1"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" asp-action="projects" asp-controller="user">@Localizer["Menu_name2"]</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdow" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Localizer["Menu_name3"]</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown">
                            <a class="dropdown-item" asp-action="records" asp-controller="user">@Localizer["Menu_name3_1"]</a>
                            <a class="dropdown-item" asp-action="new_record" asp-controller="user">@Localizer["Menu_name3_2"]</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" asp-action="calendar" asp-controller="user">@Localizer["Menu_name4"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="settings" asp-controller="user">@Localizer["Menu_name5"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="about" asp-controller="user">@Localizer["Menu_name6"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="logout" asp-controller="account">@Localizer["Menu_name7"]</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-md-0 mr-1">
                    <input class="form-control" type="text" name="search" placeholder="#@Localizer["placeSearch"]">
                </form>
                <form class="form-inline my-2 my-md-0" method="post" asp-anti-forgery="true" asp-controller="Account" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path">
                    <input name="language" type="submit" value="En" class="btn btn-outline-light" />
                    <input name="language" type="submit" value="Ru" class="btn btn-outline-light ml-1 mr-1" />
                    <input name="language" type="submit" value="Ua" class="btn btn-outline-light" />
                </form>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        @RenderBody()
    </div>
</body>
</html>