@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div style="text-align:center;">
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">@Localizer["name_col_1"]</th>
                    <th scope="col">
                        <a asp-controller="user" asp-action="records" asp-route-sort="@ViewBag.DateSortParm">@Localizer["name_col_2"]</a>
                    </th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item != null)
                    {
                        <tr>
                            <th style="width:10%" scope="row">
                                <a asp-controller="user" asp-action="show_record" asp-route-id="@item.Id" class="btn btn-outline-secondary">@Localizer["btnShow"]</a>
                            </th>
                            <td style="width:50%">@item.Title</td>

                            <td style="width:20%">@item.CreateTime</td>
                            <td style="width:10%">
                                <a asp-controller="user" asp-action="edit_record" asp-route-id="@item.Id" class="btn btn-outline-warning">@Localizer["btnEdit"]</a>
                            </td>
                            <td style="width:10%">
                                <a asp-controller="user" asp-action="delete_record" asp-route-id="@item.Id" class="btn btn-outline-danger">@Localizer["btnDel"]</a>
                            </td>
                        </tr>
                    }
                }
            <tr>
                <th scope="row" colspan="5">
                    <div style="text-align:center;">
                        <a asp-controller="user" asp-action="previous" class="btn btn-outline-secondary mr-5">@Localizer["btnPrev"]</a>
                        <a asp-controller="user" asp-action="next" class="btn btn-outline-secondary ml-5">@Localizer["btnNext"]</a>
                    </div>
                </th>

            </tr>
            </tbody>
        </table>
    }
    else
    {
        <div class="text-info">
            <p>@Localizer["msg_None"]</p>
        </div>
    }
</div>
