@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Organizer.Models.DTO.SettingsDTO;
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div style="text-align:center;">
    <form method="post" asp-controller="user" asp-action="settings" asp-antiforgery="true">
        <fieldset>
            <div asp-validation-summary="ModelOnly"></div>
            <legend>@Localizer["legend1"]</legend>
            <div class="form-group">
                <div>
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
                <input type="text" asp-for="Name" class="form-control col-md-3 d-inline" />
            </div>
            <div class="form-group">
                <div>
                    <span asp-validation-for="Surname" class="text-danger" />
                </div>
                <input type="text" asp-for="Surname" class="form-control col-md-3 d-inline" />
            </div>
            <legend>@Localizer["legend2"]</legend>
            <div class="form-group">
                <div>
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <input type="password" asp-for="Password" placeholder="@Localizer["pl_Pass"]" class="form-control col-md-3 d-inline" />
            </div>
            <div class="form-group">
                <div>
                    <span asp-validation-for="RepitPass" class="text-danger" />
                </div>
                <input type="password" asp-for="RepitPass" placeholder="@Localizer["pl_Repit"]" class="form-control col-md-3 d-inline" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-dark col-md-3">@Localizer["btnSubmit"]</button>
            </div>
        </fieldset>
    </form>
    <div class="text-success">
        @if (TempData["Success"] != null)
        {
            <p>@Localizer["txtChange"]</p>
        }
    </div>
</div>
