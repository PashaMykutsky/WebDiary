@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Organizer.Models.DTO.RecordDTO;
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div style="text-align:center;">
    <form method="post" asp-controller="user" asp-action="new_record" asp-antiforgery="true">
        <div class="form-group">
            <div>
                <span asp-validation-for="Title" class="text-danger" />
            </div>
            <input type="text" asp-for="Title" required class="form-control col-md-10 d-inline text-center" placeholder="@Localizer["placeTitle"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="Text" class="text-danger" />
            </div>
            <textarea asp-for="Text" class="form-control" rows="13" placeholder="@Localizer["placeTxtArea"]"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark col-md-3">@Localizer["btnSubmit"]</button>
        </div>
    </form>
</div>

