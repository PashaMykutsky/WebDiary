@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Organizer.Models.DTO.RegDTO;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align:center;">
    <form method="post" asp-controller="account" asp-action="register" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <input type="text" asp-for="Name" class="form-control col-md-3 d-inline" placeholder="@Localizer["placeName"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="Surname" class="text-danger" />
            </div>
            <input type="text" asp-for="Surname" class="form-control col-md-3 d-inline" placeholder="@Localizer["placeSurname"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <input type="text" asp-for="Email" class="form-control col-md-3 d-inline" placeholder="@Localizer["placeEmail"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <input type="password" asp-for="Password" class="form-control col-md-3 d-inline" placeholder="@Localizer["placePass"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="RepitPass" class="text-danger" />
            </div>
            <input type="password" asp-for="RepitPass" class="form-control col-md-3 d-inline" placeholder="@Localizer["placeRepit"]" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark col-md-3">@Localizer["btnSubmit"]</button>
        </div>
    </form>
</div>