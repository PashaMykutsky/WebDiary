@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Organizer.Models.DTO.AuthDTO;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align:center;">
    <form method="post" asp-controller="account" asp-action="login" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div>
                <span asp-validation-for="login" class="text-danger" />
            </div>
            <input type="text" asp-for="login" class="form-control col-md-3 d-inline" placeholder="@Localizer["placeEmail"]" />
        </div>
        <div class="form-group">
            <div>
                <span asp-validation-for="password" class="text-danger" />
            </div>
            <input type="password" asp-for="password" class="form-control col-md-3 d-inline" placeholder="@Localizer["placePass"]" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark col-md-3">@Localizer["btnSubmit"]</button>
        </div>
        <div class="form-group">
            <a asp-controller="account" asp-action="forgot" class="btn btn-outline-dark col-md-3">@Localizer["btnForgot"]</a>
        </div>
        <div class="form-group">
            <a asp-controller="account" asp-action="register" class="btn btn-outline-dark col-md-3">@Localizer["btnReg"]</a>
        </div>
    </form>
    <div class="text-danger">
        @if (ViewBag.IsBanned != null)
        {
            <p>@Localizer["txtIsBaned"]</p>
        }
    </div>
    <div class="text-danger">
        @if (ViewBag.Error != null)
        {
            <p>@Localizer["txtError"]</p>
        }
    </div>
    <div class="text-success">
        @if (TempData["NewPass"] != null)
        {
            <p>@Localizer["txtSend"]</p>
        }
    </div>
</div>
