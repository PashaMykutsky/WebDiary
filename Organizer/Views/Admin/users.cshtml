@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div style="text-align:center;">
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Email</th>
                    <th scope="col">LastActive</th>
                    <th scope="col">IsBanned</th>
                    <th scope="col">IsAdmin</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item != null)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Email</td>
                            <td>@item.LastActive</td>
                            <td>@item.IsBanned</td>
                            <td>@item.IsAdmin</td>
                            <td>
                                @if(@item.IsAdmin == false)
                                {
                                    @if (@item.IsBanned == true)
                                    {
                                        <a asp-controller="admin" asp-action="user_banned" asp-route-id="@item.Id" class="btn btn-outline-success">Розблокировать</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="admin" asp-action="user_banned" asp-route-id="@item.Id" class="btn btn-outline-danger">Заблокировать</a>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <th scope="row" colspan="8">
                        <div style="text-align:center;">
                            <a asp-controller="admin" asp-action="previous" class="btn btn-outline-secondary mr-5">Предыдущая</a>
                            <a asp-controller="admin" asp-action="next" class="btn btn-outline-secondary ml-5">Следующая</a>
                        </div>
                    </th>

                </tr>
            </tbody>
        </table>
    }
</div>

